@model IEnumerable<registroCovid>.Models.<CasoReportado>
{
    ViewData["Title"] = "Registro de Covid";
}

<h2></h2>

<!-- El siguiente formulario es para llevar el registro de casos reportados de Covid por departamento y genero-->
<div class="row">
    <div class="col-md-12">
        <h3>Reportar casos</h3>
        <form method="post" asp-controller="Home" asp-action="GuardarRegistro">
            <div class="form-group">
                <label for="departamento">Departamento:</label>
                <select class="form-control" id="departamento" name="departamento">
                    @foreach (var departamento in ViewBag.Departamentos)
                    {
                        <option value="@departamento.IdDepartamento">@departamento.NombreDepartamento</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="genero">Género:</label>
                <select class="form-control" id="genero" name="genero">
                    @foreach (var genero in ViewBag.Generos)
                    {
                        <option value="@genero.IdGenero">@genero.NombreGenero</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="confirmados"># Casos Confirmados:</label>
                <input type="number" class="form-control" id="confirmados" name="confirmados" required>
            </div>
            <div class="form-group">
                <label for="recuperados"># Casos Recuperados:</label>
                <input type="number" class="form-control" id="recuperados" name="recuperados" required>
            </div>
            <div class="form-group">
                <label for="fallecidos"># Casos Fallecidos:</label>
                <input type="number" class="form-control" id="fallecidos" name="fallecidos" required>
            </div>
            <button type="submit" class="btn btn-primary">Guardar Registro</button>
        </form>
    </div>
</div>

<hr />

<!-- Tabla de casos reportados -->
<div class="row">
    <div class="col-md-12">
        <h3>Casos Reportados</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Departamento</th>
                    <th>Género</th>
                    <th>Casos Confirmados</th>
                    <th>Casos Recuperados</th>
                    <th>Casos Fallecidos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var caso in Model)
                {
                    <tr>
                        <td>@caso.NombreDepartamento</td>
                        <td>@caso.NombreGenero</td>
                        <td>@caso.NumConfirmados</td>
                        <td>@caso.NumRecuperados</td>
                        <td>@caso.NumFallecidos</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>